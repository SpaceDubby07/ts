generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model TodoList {
  id        Int       @id @default(autoincrement())
  name      String
  tasks     Task[]
  createdAt DateTime  @default(now())
}

model Task {
  id         Int       @id @default(autoincrement())
  content    String
  createdAt  DateTime  @default(now())
  todoListId Int
  todoList   TodoList  @relation(fields: [todoListId], references: [id], onDelete: Cascade)

  @@index([todoListId])
}
